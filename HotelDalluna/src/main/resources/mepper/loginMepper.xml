<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
    <!-- 로그인 확인 -->
    <mapper namespace="com.java.dao.MemberAuthDao">
    	<select id="getUserById" resultType="com.java.dto.memberDetails">
        <![CDATA[
            SELECT
                *
            FROM
                customer
            WHERE
                customer_id=#{CUSTOMER_ID}
        ]]>
    </select>
    
    <!-- 회원가입  -->
   		<insert id="singup" parameterType="com.java.dto.memberDetails">
   			insert into (customer_id, customer_name, tel, password, userEmail, authority, birthday )
   			values(#{customer_id}, #{customer_name}, #{tel}, #{password}, #{userEmail}, #{authority}, #{birthday} )
   		</insert>
    
    </mapper>